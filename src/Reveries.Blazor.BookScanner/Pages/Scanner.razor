
@page "/"
<PageTitle>Reveries | Book Scanner</PageTitle>
@inject IJSRuntime Js
@inject NavigationManager Nav
@inject BookApiClient BooksApi
@inject BookState BookState
@implements IDisposable

<div class="container mt-4">
    <h1 class="display-5 text-center mb-3">ISBN Scanner</h1>

    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 text-center">
            <!-- Video stream med responsiv container -->
            <div id="video-container" class="shadow-sm mb-3">
                <video id="video" autoplay playsinline></video>
                <div class="scan-region @(HasScannedSuccessfully ? "scan-success" : "")">
                    <div class="scan-line"></div>
                </div>
            </div>
            
            <div class="input-group mt-4 isbn-input-group @(HasScannedSuccessfully ? "scan-success" : "") position-relative">
                
                <!-- Input-feltet -->
                <input @bind="_scannedIsbn"
                       @bind:event="oninput"
                       @onkeydown="HandleKeyDown"
                       disabled="@( !IsManualInputActive )"
                       class="form-control text-center fs-3 py-2 ps-5 isbn-input @(HasScannedSuccessfully ? "scan-success" : "")"
                       placeholder="@(IsManualInputActive ? "Enter ISBN manually" : "Scan the ISBN-barcode")"
                       maxlength="13" />

                <!-- Blyant ikon på venstre side -->
                <span class="position-absolute start-0 top-0 h-100 d-flex align-items-center ps-3" 
                      style="cursor:pointer;" 
                      @onclick="EnableManualInput">
                    <i class="bi @(IsManualInputActive ? "bi-upc-scan" : "bi-pencil-square") fs-5 text-secondary"></i>
                </span>
                
                <!-- Flueben ved succes -->
                @if (HasScannedSuccessfully)
                {
                    <span class="input-group-text bg-transparent border-0 position-absolute end-0 top-0 h-100 d-flex align-items-center pe-3">
                        <i class="bi bi-check-square-fill text-success fs-3"></i>
                    </span>
                }
            </div>

            <!-- Søgeknap nedenunder -->
            @if (IsManualInputActive)
            {
                <button type="button" 
                        class="btn btn-success btn-lg w-100 mt-3 search-button"
                        @onclick="SearchManualIsbn"
                        disabled="@(string.IsNullOrWhiteSpace(_scannedIsbn))">
                    <i class="bi bi-search me-2"></i>
                    Search ISBN
                </button>
            }
            
        </div>
    </div>
</div>

@code {
    private string? _inputIsbn;
    private string? _scannedIsbn
    {
        get => _inputIsbn;
        set
        {
            if (value != null)
            {
                var filtered = new string(value.Where(c => char.IsDigit(c) || c == 'X' || c == 'x').ToArray());
                _inputIsbn = filtered.ToUpper();
            }
            else
            {
                _inputIsbn = value;
            }
        }
    }
    private BookDto? _bookDto;
    private bool HasScannedSuccessfully => _bookDto != null;
    private DotNetObjectReference<Scanner>? _objRef;
    private bool IsManualInputActive;
    private bool _isProcessing;
    
    private void EnableManualInput()
    {
        IsManualInputActive = !IsManualInputActive;
        _scannedIsbn = string.Empty;
        _bookDto = null;
    }
    
    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && IsManualInputActive)
        {
            await SearchManualIsbn();
        }
    }
    
    private async Task SearchManualIsbn()
    {
        if (!string.IsNullOrWhiteSpace(_scannedIsbn))
        {
            await OnIsbnScanned(_scannedIsbn);
            IsManualInputActive = false;
        }
    }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _objRef = DotNetObjectReference.Create(this);
            await Js.InvokeVoidAsync("scanner.startContinuousScan", _objRef);
        }
    }

    [JSInvokable]
    public async Task OnIsbnScanned(string scannedIsbn)
    {
        if (_isProcessing) return;
        
        _isProcessing = true;
        _scannedIsbn = scannedIsbn;

        try
        {
            _bookDto = await BooksApi.GetAsync(scannedIsbn);

            if (_bookDto != null)
            {
                BookState.SetBook(_bookDto);
                
                StateHasChanged();
                
                await Task.Delay(1750);
                
                Nav.NavigateTo($"/book/{_scannedIsbn}");
            }
        }
        catch
        {
            _bookDto = null;
            BookState.Clear();
            StateHasChanged();
        }
        finally
        {
            _isProcessing = false;
        }
    }

    public void Dispose()
    {
        _ = Js.InvokeVoidAsync("scanner.stopContinuousScan");
        _objRef?.Dispose();
    }
}