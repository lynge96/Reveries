@page "/"
<PageTitle>Reveries | Book Scanner</PageTitle>
@inject IJSRuntime Js
@inject NavigationManager Nav
@inject BookApiClient BooksApi
@inject BookState BookState
@implements IDisposable

<div class="container mt-4">
    <h1 class="display-5 text-center mb-3 mt-5">ISBN Scanner</h1>

    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 text-center">
            
            <!-- 📷 Video stream -->
            <div id="video-container" class="shadow-sm mb-3">
                <video id="video" autoplay playsinline></video>
                <div class="scan-region @(HasScannedSuccessfully ? "scan-success" : "")">
                    <div class="scan-line"></div>
                </div>
            </div>

            <!-- 🔢 Input-felt -->
            <div class="input-group mt-4 isbn-input-group @(HasScannedSuccessfully ? "scan-success" : "") position-relative">
                
                <input @bind="ScannedIsbn"
                       @bind:event="oninput"
                       @onkeydown="HandleKeyDown"
                       disabled="@(!_isManualInputActive)"
                       class="form-control text-center fs-3 py-2 ps-5 isbn-input @(HasScannedSuccessfully ? "scan-success" : "") @(_errorMessage != null ? "is-invalid" : "")"
                       placeholder="@(_isManualInputActive ? "Enter ISBN manually" : "Scan the ISBN-barcode")"
                       maxlength="13" />
                
                <!-- ✏️ Toggle ikon -->
                <span class="position-absolute start-0 top-0 h-100 d-flex align-items-center ps-3"
                      role="button"
                      @onclick="EnableManualInput">
                    <i class="bi @(_isManualInputActive ? "bi-upc-scan" : "bi-pencil-square") fs-5 text-secondary"></i>
                </span>

                <!-- ✅ Succesikon -->
                @if (HasScannedSuccessfully)
                {
                    <span class="input-group-text bg-transparent border-0 position-absolute end-0 top-0 h-100 d-flex align-items-center pe-3">
                        <i class="bi bi-check-square-fill text-success fs-3"></i>
                    </span>
                }
            </div>

            <!-- ⚠️ Fejlbesked -->
            @if (!string.IsNullOrWhiteSpace(_errorMessage))
            {
                <div class="alert alert-danger mt-3 d-flex align-items-center" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                    @_errorMessage
                </div>
            }
            
            <!-- 🔍 Søgeknap -->
            @if (_isManualInputActive && _errorMessage is null)
            {
                <button type="button"
                        class="btn btn-success btn-lg w-100 mt-3 search-button"
                        @onclick="SearchManualIsbn"
                        disabled="@string.IsNullOrWhiteSpace(ScannedIsbn)">
                    <i class="bi bi-search me-2"></i> Search ISBN
                </button>
            }

        </div>
    </div>
</div>

@code {
    private string? _inputIsbn;
    private BookDto? _bookDto;
    private string? _errorMessage;
    private bool _isManualInputActive;
    private bool _isProcessing;
    private DotNetObjectReference<Scanner>? _objRef;
    private bool HasScannedSuccessfully => _bookDto is not null;
    private string? ScannedIsbn
    {
        get => _inputIsbn;
        set
        {
            if (value is null)
            {
                _inputIsbn = null;
                return;
            }

            _inputIsbn = new string(value.Where(c => char.IsDigit(c) || c is 'X' or 'x').ToArray()).ToUpper();
            _errorMessage = null;
        }
    }
    
    private void EnableManualInput()
    {
        _isManualInputActive = !_isManualInputActive;
        ScannedIsbn = string.Empty;
        _bookDto = null;
        _errorMessage = null;
    }
    
    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && _isManualInputActive)
            await SearchManualIsbn();
    }
    
    private async Task SearchManualIsbn()
    {
        if (string.IsNullOrWhiteSpace(ScannedIsbn))
            return;

        await OnIsbnScanned(ScannedIsbn);

        if (_errorMessage is null)
            _isManualInputActive = false;
    }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _objRef = DotNetObjectReference.Create(this);
            await Js.InvokeVoidAsync("scanner.startContinuousScan", _objRef);
        }
    }
    
    [JSInvokable]
    public async Task OnIsbnScanned(string scannedIsbn)
    {
        if (_isProcessing) return;
        
        _isProcessing = true;
        ScannedIsbn = scannedIsbn;
        _errorMessage = null;

        try
        {
            _bookDto = await BooksApi.GetAsync(scannedIsbn);

            if (_bookDto != null)
            {
                BookState.SetBook(_bookDto);
                StateHasChanged();
                await Task.Delay(1750);
                Nav.NavigateTo($"/book/{ScannedIsbn}");
            }
        }
        catch (Exception ex)
        {
            switch (ex)
            {
                case ApiConnectionException:
                    _errorMessage = ex.Message;
                    break;
                case ApiException { StatusCode: HttpStatusCode.BadRequest }:
                    _errorMessage = "Invalid ISBN number. Please check the number and try again.";
                    break;
                case ApiException { StatusCode: HttpStatusCode.NotFound }:
                    _errorMessage = "The book was not found. Try a different ISBN number.";
                    break;
                default:
                    _errorMessage = "An unexpected error occurred. Please try again later.";
                    break;
            }
            
            _bookDto = null;
            BookState.Clear();
            StateHasChanged();
        }
        finally
        {
            _isProcessing = false;
        }
    }

    public void Dispose()
    {
        _ = Js.InvokeVoidAsync("scanner.stopContinuousScan");
        _objRef?.Dispose();
    }
}